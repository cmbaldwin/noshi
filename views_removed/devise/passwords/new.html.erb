<h2 class="text-base lg:text-xl">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field m-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'rounded border border-slate-100 hover:border-sky-300 hover:border-dashed active:border-solid' %>
  </div>

  <div class="actions m-2">
    <%= f.submit "Send me reset password instructions", class: 'cursor-pointer px-4 py-2 rounded border border-slate-100 hover:border-sky-300 hover:border-dashed active:border-solid' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
